<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/top_message"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dice_margin">

                <ImageButton
                    android:id="@+id/dice1"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/dice_margin"
                    android:contentDescription="@string/dice1_label"
                    android:tag="dice1"
                    android:src="@drawable/white1" />
                <ImageButton
                    android:id="@+id/dice2"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/dice_margin"
                    android:contentDescription="@string/dice2_label"
                    android:tag="dice2"
                    android:src="@drawable/white1"/>
                <ImageButton
                    android:id="@+id/dice3"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:contentDescription="@string/dice3_label"
                    android:tag="dice3"
                    android:src="@drawable/white1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/dice4"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/dice_margin"
                    android:contentDescription="@string/dice4_label"
                    android:tag="dice4"
                    android:src="@drawable/white2"/>
                <ImageButton
                    android:id="@+id/dice5"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/dice_margin"
                    android:contentDescription="@string/dice5_label"
                    android:tag="dice5"
                    android:src="@drawable/white2"/>
                <ImageButton
                    android:id="@+id/dice6"
                    android:layout_width="@dimen/dice_size"
                    android:layout_height="@dimen/dice_size"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:contentDescription="@string/dice6_label"
                    android:tag="dice6"
                    android:src="@drawable/white2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/throw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:text="@string/throw_label" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grading_label"/>

        <Spinner
            android:id="@+id/grading_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>